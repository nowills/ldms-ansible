---
- name: install nginx
  apt:
    name: nginx
    state: present
    update_cache: yes

- name: ensure nginx is running
  systemd:
    name: nginx
    state: started
    enabled: yes

- name: remove default site
  file:
    path: /etc/nginx/sites-enabled/default
    state: absent

- name: copy nginx config
  template:
    src: nginx.j2
    dest: /etc/nginx/sites-enabled/guacamole.conf
    owner: root
    group: root
    mode: 0644
  notify: restart nginx

- name: transfer nginx certs
  copy:
    src: "{{ certs }}" 
    dest: /etc/ssl/
    owner: root
    group: root
    mode: 0600
  loop:
    - nginx-cert
    - nginx-private
  loop_control:
    loop_var: certs

- name: force nginx restart only if config has changed 
  meta: flush_handlers
